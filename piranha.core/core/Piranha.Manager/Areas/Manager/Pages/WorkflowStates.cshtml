                piranha.workflowStates.openStateModal(state);
                return;
            }
            
            // Fallback to API call if not in cache
            fetch(piranha.baseUrl + 'api/workflow/states/' + id, {
                method: 'GET',
                headers: piranha.utils.antiForgeryHeaders()
            })
                .then(function (response) { 
                    if (!response.ok) {
