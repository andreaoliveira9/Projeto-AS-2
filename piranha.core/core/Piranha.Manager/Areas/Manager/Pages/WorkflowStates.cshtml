                    html += '<button type="button" class="btn btn-outline-danger btn-sm" onclick="piranha.workflowStates.deleteTransition(\'' + (rule.id || '') + '\')"><i class="fas fa-trash me-1"></i>Delete</button>';
                    html += '</div>';
                    html += '</div>';
